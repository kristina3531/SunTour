@media screen and (max-width: 980px)
  .header
    .container
      justify-content space-between
    &-logo
      margin-right 0
      &__img
        width 140px
        height 30px
    &-phone, &-feedback, .social
      margin-left 0
    &-phone
      font-size 25px

  .science
    &__wrap
      flex-wrap wrap
      flex-flow column
    &__sidebar
      padding-top 30px
      margin 0 auto
      width 60%

  .banner
    &-badge
      width 200px
      height 200px
      left 3%
      bottom 5%
      &__country, &__code
        font-size 20px

    .hotel
      &__tour, &__price
        font-size 30px
      &__star
        width 20px
        height 20px

@media screen and (max-width: 799px)
  .banner
    .hotel
      &__tour
        margin-bottom 15px
      &__stars
        order 3
      &__price
        margin-left auto

@media screen and (max-width: 768px)
  .header
    padding 20px 0
    .container
      flex-wrap wrap
    &-logo
      margin-bottom 15px
    &-heading
      width 50%
    &-heading
      order 4
    &-feedback
      order 5

  .science
    &__title-h2
      font-size 35px
      line-height 37px
      margin-bottom 20px
    &__whr
      font-size 60px
    &__heading
      font-size 25px
      line-height 27px
      margin-bottom 5px
    &__txt
      font-size 18px
      line-height 23px

  .banner
    .hotel
      &-showcard
        top -20%
        &__number
          font-size 66px
        &__text
          font-size 25px
      &__price--old
        font-size 20px

  .tours__list
    margin 0 -10px
  .tours__item
    margin 0 10px

@media screen and (max-width: 680px)
  .hotel-showcard
    top -15%

  .banner
    .hotel__tour, .hotel__price
      font-size 25px
    .hotel__price--old
      font-size 16px

  .tours
    &__list, &__item
      flex-wrap wrap
      margin 0
    &__item
      width 100%
      margin-bottom 20px
      &:last-child
        margin-bottom 0

@media screen and (max-width: 576px)
  .banner
    &-badge
      width 120px
      height 120px
      &__country
        margin-bottom 5px
      &__country, &__code
        font-size 12px
      &__text
        font-size 8px
    
    .hotel
      &-info
        width 65% !important
      &-ratings
        width 100% !important
      &__tour
        margin-bottom 15px
      &__stars
        order 2
      &__price
        order 3
      &__reviews, &-rating__common
        margin-right 10px
      &__rating
        margin-right 5px
        &:last-child
          margin-right 0

  .science
    &__title-h2
      font-size 30px
      line-height 32px
      margin-bottom 15px
    &__txt
      font-size 18px
      line-height 23px
    &__text,  &__uniquetext
      margin-bottom 10px
    &__uniquetext
      padding 10px 0 10px 42px
      &::before
        width 4px
        left 20px

  .footer
    &__content
      display block
      text-align center
    &__txt
      margin-bottom 10px

@media screen and (max-width: 480px)
  .header
    padding 15px 0
    &-logo
      margin-bottom 10px
    &-heading
      order 3
      margin-bottom 10px
    &-feedback
      order 4
    &-phone
      order 5
      width 100%
      text-align center

  .hotel__reviews
    margin-bottom 10px
  
  .banner-hotel
    .hotel-info
      margin-bottom 15px
    .hotel__tour
      margin-right 0
    .hotel__tour, .hotel__price
      font-size 23px

    .hotel-showcard
      top -10%
      &__number
        font-size 33px
      &__text
        font-size 12px
  
  .science
    padding 20px 0
    &__title-h2
      font-size 30px
      line-height 32px
      margin-bottom 15px
    &__sidebar
      padding-top 15px
    &__whr
      font-size 40px
    &__heading
      font-size 20px
      line-height 22px
      margin-bottom 5px
    &__txt
      font-size 16px
      line-height 20px

@media screen and (max-width: 400px)
  .hotel
    &-showcard
      top -5%
      right 5%
      &__text
        font-size 16px
    &__reviews
      margin-bottom 0
    &-rating
      display none

  .tours
    .hotel__tour, .hotel__price
      font-size 30px
      &--old
        font-size 18px





























