.banner
  padding 25px 0
  
  &-img
    position relative
    margin-bottom 20px
    img
      width 100%
    &::after
      content ''
      position absolute
      right 0
      bottom 0
      width 45%
      height 13%
      background url('../img/content/main/triangle.png') no-repeat
      background-size 100%
  &-badge
    position absolute
    left 32px
    bottom 33px
    width 250px
    height 250px
    border-radius 50%
    background-color rgba(255, 242, 0, 0.7)
    text-align center
    display flex
    flex-direction column
    justify-content center
    align-items center
    span
      display block
      font-family main-font2
    &__country, &__text
      color #000
    &__country
      margin-bottom 12px
      font-size 25px
    &__text
      margin-bottom 5px
      text-transform uppercase
      font-size 14px
    &__code
      padding 2px
      font-size 24px
      color #fff
      background-color #000

  &-hotel
    .hotel-ratings, .hotel-info
      width 60%
    .hotel__name, .hotel__stars
      margin-right 20px
    
      