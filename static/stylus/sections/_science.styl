.science
  padding 35px 0 44px
  &__wrap
    display flex
  &__sidebar
    flex none
    width 25%
    margin-left 40px
    padding-top 160px
    span
      display block
      margin-bottom 10px
  &__whr
    font-size 100px
    letter-spacing -0.05em
    font-family main-font2
    color grey-color2
  &__heading
    font-size 30px
    line-height 31px
  &__txt
    font-size 20px
    line-height 25px
    color grey-color2
  &__title-h2
    margin-bottom 30px
    font-family main-font2
    font-size 50px
    line-height 52px
  &__title-h3
    margin-bottom 12px
    font-size 22px
  &__title-h4
    margin-bottom 10px
    font-size 16px
  &__text,  &__uniquetext, &__answers, &__item
    font-size 14px
    line-height 19px
  &__text,  &__uniquetext
    margin-bottom 20px
  &__list
    // margin-bottom 40px
  &__uniquetext
    padding 15px 0 15px 72px
    font-style italic
    position relative
    &::before
      content ''
      position absolute
      top 0
      left 48px
      width 8px
      height 100%
      background-color main-color
  &__answers, &__item
    line-height 25px
  &__wrapper
    overflow auto
    margin 30px 0
  &__table
    width 100%
    border-collapse collapse
    font-size 14px
    thead
      background-color rgba(grey-color2, .2)
      font-weight 700
    td
      padding 10px 5px
      min-width 120px
   
    