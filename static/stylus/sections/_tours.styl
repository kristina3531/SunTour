.tours
  padding 20px 0 35px

  &__list
    display flex
    margin 0 -20px
  &__item
    width 50%
    margin 0 20px
  &__link
    display block
  &__img
    margin-bottom 20px
    overflow hidden
    img
      width 100%
      transition all .3s
    &:hover
      img
        transform scale(1.3) rotate(10deg)

  &__info
    display flex
    flex-wrap wrap
    justify-content space-between
    position relative

  .hotel__tour
    margin-bottom 10px
  .hotel__price--old
    position absolute
    right 0
    top 45px
  .hotel__subtitle
    width 100%